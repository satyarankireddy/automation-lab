1. hostnamectl set-hostname git.unixcloudfusion.in
2. bash
3. yum install git
4. su - vagrant
5. mkdir automation
6. cd automation
7. git init
8. ls -ltr
9.ls -ltra
10. cd .git
11. cd ..
12. git config --global user.name "Ankit"
13. git config --global user.email "ankit@unixcloudfusion.in"
14. git config --list
15. touch README.TXT
16. vi README.TXT
escape key, :wq! <enter>
17. touch index.html
18. vi index.html
19. git status
20. git add README.txt
21. git status
22. git add .
23. git status
24. git commit -m "<comment>"
25. vi index.html
26. git diff index.html
27. git add index.html
28. git commit -a -m "edited the index file"
29. touch remove.txt
30. git add remove.txt
31. git status
32. rm remove.txt
33. git rm remove.txt
34. git status
